<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_segunda"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/androide"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.laguilera.cualquiera.SegundaActivity">

    <CheckBox
        android:text="Internet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chkInternet"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_below="@+id/chkEscritura"
        android:layout_alignStart="@+id/chkEscritura" />

    <CheckBox
        android:text="Escritura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:id="@+id/chkEscritura"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_below="@+id/email"
        android:layout_alignStart="@+id/email" />

    <TextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Texto"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="Contactos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chkContactos"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_marginLeft="123dp"
        android:layout_alignBaseline="@+id/chkEscritura"
        android:layout_alignBottom="@+id/chkEscritura"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="43dp" />

    <CheckBox
        android:text="SMS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chkSMS"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_below="@+id/chkContactos"
        android:layout_alignStart="@+id/chkContactos" />

</RelativeLayout>
